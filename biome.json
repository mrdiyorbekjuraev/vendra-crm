{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			"build",
			".next",
			".turbo",
			".vercel",
			"env.mjs",
			"report-bundle-size.js"
		]
	}
}
